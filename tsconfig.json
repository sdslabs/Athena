{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@db/*": ["./db/*"],
      "@models/*": ["./models/*"],
      "@routers/*": ["./routers/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@controllers/*": ["./controllers/*"],
      "@utils/*": ["./utils/*"]
    },
    "typeRoots": ["./src/types", "node_modules/@types"]
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}